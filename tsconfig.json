{
  "compilerOptions": {
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@sections": ["components/sections"],
      "@pages": ["pages"],
      "@ui": ["ui"],
      "@hooks": ["hooks"],
      "@config": ["../config"],
      "@config/*": ["../config/*"],
      "@ui/*": ["ui/*"]
    },
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "src",
    "@types"
  ]
}