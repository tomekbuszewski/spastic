{
  "compilerOptions": {
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@sections": ["src/components/sections"],
      "@pages": ["src/pages"],
      "@ui": ["src/ui"],
      "@helpers/*": ["src/helpers/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@ui/*": ["src/ui/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "src",
    "demos",
    "@types"
  ],
  "exclude": ["node_modules"]
}